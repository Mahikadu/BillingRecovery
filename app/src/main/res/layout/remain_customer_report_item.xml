<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900dp"
    android:layout_height="@dimen/_40sdp"
    android:gravity="center"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tr_stock_report"
        android:layout_width="900dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:id="@+id/tr_label_stock"
            android:layout_width="900dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtcustname"
                style="@style/report_textview"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Name"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtcustdocno"
                style="@style/report_textview"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Doc No"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtcustbill"
                style="@style/report_textview"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Bill No"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtcusttotal"
                style="@style/report_textview"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Total Amt"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtcustpaid"
                style="@style/report_textview"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Paid Amt"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtcustremain"
                style="@style/report_textview"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Remaining Amt"
                android:textSize="11sp" />

            <!-- <TextView
                 android:id="@+id/txtimage"
                 style="@style/report_textview"
                 android:layout_width="100dp"
                 android:padding="@dimen/_5sdp"
                 android:layout_height="match_parent"
                 android:background="@layout/tableborder_for_fields"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:text="Image Url" />-->

            <TextView
                android:id="@+id/txtcustcreatedate"
                style="@style/report_textview"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Created Date"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtcustupdatedate"
                style="@style/report_textview"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@layout/tableborder_for_fields"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:text="Updated Date"
                android:textSize="11sp" />


            <Button
                android:id="@+id/txtupdate"
                android:layout_width="90dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:layout_margin="@dimen/_1sdp"
                android:text="Update"
                android:textSize="11sp" />


        </TableRow>
    </TableLayout>
</LinearLayout>