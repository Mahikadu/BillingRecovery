<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <include
        layout="@layout/headernew" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/generatebill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/generate_bill"
                android:layout_weight="1"
                android:layout_margin="25dp" />

            <ImageView
                android:id="@+id/updatebill"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/update_bill"
                android:layout_margin="25dp"
                android:layout_weight="1"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/report"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/bills_report"
                android:layout_margin="25dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/custreport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/cust_report"
                android:layout_margin="25dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/aboutus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/about_us"
                android:layout_margin="25dp"
                android:layout_weight="1"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>